{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "baseUrl": "./",
    "outDir": "./dist",
    "paths": {
      "@server/*": ["./src/*"],
      "@stdTypes/*": ["../types/*"],
      "@smshTypes/*": ["../smshTypes/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "typeRoots": ["./node_modules/@types", "../types", "../smshTypes"]
  },
  "include": ["src"]
}
